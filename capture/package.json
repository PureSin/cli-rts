{
  "name": "cli-rts",
  "version": "0.1.0",
  "type": "module",
  "description": "RTS game state from Claude Code hook events",
  "bin": {
    "cli-rts": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs');const f='dist/cli.js';const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!'))fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c)\"",
    "dev": "tsx src/cli.ts"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "commander": "^13.0.0"
  }
}
